<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/output1"
        android:text="0"
        android:textSize="32sp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@id/output"
        android:layout_margin="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:text="0"
        android:textSize="64sp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@id/button_layout"
        android:layout_margin="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:id="@+id/button_layout"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


                    <com.google.android.material.button.MaterialButton
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_c"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:text="C"
                        android:backgroundTint="#C0C0C0"
                        android:textSize="36sp"
                        android:layout_margin="12dp"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

                    <com.google.android.material.button.MaterialButton
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_ac"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:text="AC"
                        android:backgroundTint="#C0C0C0"
                        android:layout_gravity="center"
                        android:textSize="21sp"
                        android:layout_margin="12dp"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
                    <com.google.android.material.button.MaterialButton
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_percentage"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:text="%"
                        android:backgroundTint="#C0C0C0"
                        android:textSize="32sp"
                        android:layout_margin="12dp"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
                    <com.google.android.material.button.MaterialButton
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image_divide"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:text="/"
                        android:backgroundTint="#FFA500"
                        android:textSize="32sp"
                        android:layout_margin="12dp"
                        app:cornerRadius="36dp"
                        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_seven"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_eight"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="8"
                android:layout_gravity="center"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_nine"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="9"
                android:textSize="32sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_into"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="*"
                android:backgroundTint="#FFA500"
                android:textSize="32sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_four"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_five"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="5"
                android:layout_gravity="center"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_six"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="6"
                android:textSize="32sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="-"
                android:backgroundTint="#FFA500"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_one"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="1"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_two"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="2"
                android:layout_gravity="center"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_three"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="3"
                android:textSize="32sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="+"
                android:backgroundTint="#FFA500"
                android:textSize="32sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">


            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_zero"
                android:layout_width="162dp"
                android:layout_height="72dp"
                android:text="0"
                android:textSize="36sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="."
                android:textSize="35dp"
                android:textAlignment="gravity"
                android:textStyle="bold"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />
            <com.google.android.material.button.MaterialButton
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="="
                android:backgroundTint="#FFA500"
                android:textSize="32sp"
                android:layout_margin="12dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>